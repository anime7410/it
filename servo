#include <Servo.h>  // Include Servo library

Servo myServo;      // Create a Servo object

void setup() {
  myServo.attach(9);    // Attach servo signal pin to digital pin 9
  Serial.begin(9600);
  Serial.println("Servo motor control started");
}

void loop() {
  // Sweep from 0째 to 180째
  for (int angle = 0; angle <= 180; angle++) {
    myServo.write(angle);      // Move servo to current angle
    delay(15);                 // Wait for servo to reach the position
  }

  // Sweep back from 180째 to 0째
  for (int angle = 180; angle >= 0; angle--) {
    myServo.write(angle);
    delay(15);
  }
}
